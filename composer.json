{
    "name": "eoko/mandrill",
    "description": "ZF2 wrapper for the Mandrill API.",
    "license": "BSD-3-Clause",
    "keywords": [
        "eoko",
        "zf2",
        "mandrill"
    ],

    "homepage": "https://github.com/eoko/zf-mandrill",
    "minimum-stability": "dev",
    "prefer-stable": true,

    "autoload": {
        "psr-4": {
            "Eoko\\Mandrill\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Eoko\\MandrillTest\\": "test/"
        }
    },

    "require": {
        "php": ">=5.5",
        "eoko/zf-console": "~1.0",
        "zendframework/zend-stdlib": "~2.5",
        "zendframework/zend-console": "~2.5",
        "zendframework/zend-servicemanager": "~2.5",
        "zendframework/zend-view": "^2.5@dev",
        "mandrill/mandrill": "~1.0",
        "slm/queue": "^0.5.0@dev"
    },

    "require-dev": {
        "zendframework/zenddiagnostics":"~1.0",
        "zendframework/zftool":"dev-master",
        "satooshi/php-coveralls": "^0.7.0@dev",
        "mockery/mockery": "^1.0@dev",
        "fabpot/php-cs-fixer": "1.7.*",
        "phpunit/PHPUnit": "~4.0"
    }
}
